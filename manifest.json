{
  "manifest_version": 3,
  "name": "PropaScan",
  "version": "1.0.0",
  "description": "Upload images or enter text for analysis and preview",
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "history.html",
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://ai.hackclub.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.js", "content.css", "highlighter.js", "highlighter.css"],
      "matches": ["<all_urls>"]
    }
  ]
}

