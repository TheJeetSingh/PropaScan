{
  "manifest_version": 3,
  "name": "PropaScan",
  "version": "1.0.0",
  "description": "Upload images or enter text for analysis and preview",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://ai.hackclub.com/*"
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.js", "content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}

